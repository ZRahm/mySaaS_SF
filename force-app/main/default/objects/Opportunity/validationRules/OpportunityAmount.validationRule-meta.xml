<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OpportunityAmount</fullName>
    <active>true</active>
    <description>If the Stage is &apos;Closed Lost&apos;, &apos;Amount&apos; can not be empty</description>
    <errorConditionFormula>ISPICKVAL( StageName , &apos;Closed Lost&apos;) &amp;&amp;    ISBLANK( Amount )</errorConditionFormula>
    <errorDisplayField>Amount</errorDisplayField>
    <errorMessage>Please specify the Amount field</errorMessage>
</ValidationRule>
