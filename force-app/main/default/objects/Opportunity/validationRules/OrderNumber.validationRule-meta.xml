<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OrderNumber</fullName>
    <active>true</active>
    <description>Order Number must be non-negative even number</description>
    <errorConditionFormula>OrderNumber__c &lt; 0  ||   MOD(OrderNumber__c,2)  &lt;&gt;  0</errorConditionFormula>
    <errorDisplayField>OrderNumber__c</errorDisplayField>
    <errorMessage>Order Number must be non-negative even number</errorMessage>
</ValidationRule>
